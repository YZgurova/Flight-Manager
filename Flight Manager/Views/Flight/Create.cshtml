@model FlightInputModel

<form class="mx-auto half-width" asp-controller="Flight" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="LocationFrom"></label>
        <input asp-for="LocationFrom" class="form-control" />
        <span asp-validation-for="LocationFrom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LocationTo"></label>
        <input asp-for="LocationTo" class="form-control" />
        <span asp-validation-for="LocationTo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Takeoff"></label>
        <input asp-for="Takeoff" class="form-control" />
        <span asp-validation-for="Takeoff" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Landing"></label>
        <input asp-for="Landing" class="form-control" />
        <span asp-validation-for="Landing" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="planeType"></label>
        <span asp-validation-for="planeType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlaneId"></label>
        <input asp-for="PlaneId" class="form-control" />
        <span asp-validation-for="PlaneId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PilotName"></label>
        <input asp-for="PilotName" class="form-control" />
        <span asp-validation-for="PilotName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountOfFreePosition"></label>
        <input asp-for="CountOfFreePosition" class="form-control" />
        <span asp-validation-for="CountOfFreePosition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BusinessClassFreePositions"></label>
        <input asp-for="BusinessClassFreePositions" class="form-control" />
        <span asp-validation-for="BusinessClassFreePositions" class="text-danger"></span>
    </div>

  
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Create</button>
    </div>
</form>