@model FlightDetailModel
@{
    ViewData["Title"] = "Flight-Details page";
}
<div class="container-fluid">
    <header>        
    </header>
    <main class="mt-3 mb-5">
        <h1 class="text-center">Flight data</h1>
        <hr class="hr-2 bg-dark" />

        <div class="product-description-holder">
            <h3 class="text-left">From: @Model.LocationFrom</h3>
        </div>
        <div class="product-description-holder">
            <h3 class="text-left">To: @Model.LocationTo</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">Departure time: @Model.Takeoff</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">Landing: @Model.Landing</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">Plane Type: @Model.planeType</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">PlaneId: @Model.PlaneId</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">Pilot name: @Model.PilotName</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">Total vacancies : @Model.CountOfFreePosition</h3>
        </div>

        <div class="product-description-holder">
            <h3 class="text-left">Vacancies in business class : @Model.BusinessClassFreePositions</h3>
        </div>

        <div class="product-action-holder mt-4 d-flex justify-content-around">
            <a class="btn chushka-bg-color" asp-controller="Reservation" asp-action="UpdateAvailableTicket" asp-route-id="@Model.Id">Order</a>
        </div>
    </main>
    <footer>
        <div class="container-fluid chushka-bg-color">
            <div class="text-white p-2 text-center">
                &copy; CopyRight Sanity Web Design Studios 2018. All rights
                reserved.
            </div>
        </div>
    </footer>
</div>