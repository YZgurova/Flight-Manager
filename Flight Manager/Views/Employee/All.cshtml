@model List<User>
@{ ViewData["Title"] = "Home Page";
    int index = 1;
    }
<div>
    @if (!Model.Any())
    {
<hr class="bg-info cm-hr" />
<div class="text-secondary font-size-30 text-center mt-4">There are no employees!</div>
<hr class="bg-info cm-hr" /> }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr class="row">
                    <th class="col-md-1">&#8470;</th>
                    <th class="col-md-2">Email</th>
                    <th class="col-md-2">First Name</th>
                    <th class="col-md-2">Last Name</th>
                    <th class="col-md-2">Personal Id</th>
                    <th class="col-md-3">Delete User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr class="row">
                    <td class="col-md-1">@(index++)</td>
                    <td class="col-md-2">
                        <a 
                            @*asp-area="@AdministrationArea"*@
                            asp-controller="Employee"
                            asp-action="Details"
                            asp-route-id="@employee.Id">
                            @employee.Email
                        </a>
                    </td>
                    <td class="col-md-2">@employee.FirstName</td>
                    <td class="col-md-2">@employee.LastName</td>
                    <td class="col-md-2">@employee.PersonalId</td>
                    <td class="col-md-3">
                        <a style="color:black"
                            asp-controller="Employee"
                            asp-action="Delete"
                            asp-route-id="@employee.Id">
                            Delete
                        </a>
                    </td>
                    </tr>               
                }
            </tbody>
        </table>
    }
</div>
